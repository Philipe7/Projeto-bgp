!
!
!
!
!
!
interface Loopback0
 ip address 6.6.6.6 255.255.255.255
!
interface Ethernet0/0
 no ip address
 duplex auto
!
interface Ethernet0/0.10
 encapsulation dot1Q 10
 ip address 1.100.0.6 255.255.255.0
 ipv6 address FC00:100::6/64
!
interface Ethernet0/0.20
 encapsulation dot1Q 20
 ip address 1.20.30.6 255.255.255.0
!
interface Ethernet0/1
 ip address 200.30.0.1 255.255.255.0
 duplex auto
 ipv6 address 2003:30:30::1/64
 !
interface Ethernet0/2
 no ip address
 shutdown
 duplex auto
!
interface Ethernet0/3
 no ip address
 shutdown
 duplex auto
!
router bgp 30
 bgp log-neighbor-changes
 no bgp default ipv4-unicast
 neighbor 1.100.0.8 remote-as 100
 neighbor 2.2.2.2 remote-as 20
 neighbor 2.2.2.2 ttl-security hops 1
 neighbor 2.2.2.2 disable-connected-check
 neighbor 2.2.2.2 update-source Loopback0
 neighbor FC00:100::8 remote-as 100
 !
 address-family ipv4
  network 200.30.0.0
  neighbor 1.100.0.8 activate
  neighbor 2.2.2.2 activate
  neighbor 2.2.2.2 weight 10
 exit-address-family
 !
 address-family ipv6
  network 2003:30:30::/64
  neighbor FC00:100::8 activate
 exit-address-family
!
ip forward-protocol nd
!
!
no ip http server
no ip http secure-server
ip route 2.2.2.2 255.255.255.255 1.20.30.2
!
ipv6 ioam timestamp
!
route-map prepend permit 10
 set weight 10
!
!
!
control-plane
!
!
!
!
!
!
!
!
line con 0
 logging synchronous
line aux 0
line vty 0 4
 login
 transport input none
!
!
end